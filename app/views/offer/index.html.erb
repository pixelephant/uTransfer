			<fieldset id="tel">
				<legend>Phone number</legend>
				<div>
					<div class="half">
						<label for="phone-country">Country code</label>
						<input type="text" name="phone-country" id="phone-country" class="required" />
					</div>
					<div class="half">
						<label for="phone-number">Phone no.</label>
						<input type="tel" name="phone-number" id="phone-number" class="required" />
					</div>
				</div>
			</fieldset>
			<fieldset>
				<label for="email">Email address</label>
				<input type="email" name="email" id="email" class="required email" />
			</fieldset>
			<h4>Interests</h4>
			<fieldset id="type" class="radio">
				<legend>What form of education are you applying for?</legend>
				<div>
					<div class="half">
						<label for="bsc">BSc</label><input type="radio" name="type" id="bsc" checked />
					</div>
					<div class="half">
						<label for="msc">MSc</label><input type="radio" name="type" id="msc" />
					</div>
					<div class="half">
						<label for="phd">PhD</label><input type="radio" name="type" id="phd" />
					</div>
				</div>
			</fieldset>
			<fieldset id="uni" class="radio">
				<legend>Did you find an interesting university in our <a href="/university">list</a>?</legend>
				<div>
					<div class="half">
						<label for="no-uni">Yes</label><input type="radio" name="uni" id="no-uni" />
					</div>
					<div class="half">
						<label for="yes-uni">No</label><input type="radio" name="uni" id="yes-uni" />
					</div>
				</div>
			</fieldset>
			<div class="uni-yes">
				<fieldset id="exact-uni" class="selects">
					<legend>Where would you like to apply?</legend>
					<div>
						<div class="half">
							<label for="university">University</label> 
							<select name="university" id="university">
								<option value="#">University 1</option>
								<option value="#">University 2</option>
								<option value="#">University 3</option>								
							</select>
						</div>
						<div class="half">
							<label for="major">Major</label> 
							<select name="major" id="major">
								<option value="#">Major 1</option>
								<option value="#">Major 2</option>
								<option value="#">Major 3</option>								
							</select>
						</div>
					</div>
				</fieldset>
			</div>
			<div class="uni-no">
				<fieldset id="interests" class="radio">
					<legend>Please select which applies to you</legend>
					<div>
						<div class="half">
							<label for="">I like maths <input type="checkbox" name="interests" id="" /></label>
						</div>
						<div class="half">
