<header id="main-header">
	<section id="language-selector">
		<div id="language-inner" class="clearfix">
			<p>Select your language</p>
			<ul id="languages">
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
			</ul>
			<a href="#" id="current-language"><%= image_tag "language-arrow.png", :title => "title", :class => "class" %><span>Language</span></a>
		</div>
	</section>
	<section id="masthead" class="clearfix">
		<div class="left">
			<a id="logo" href="/"><%= image_tag "logo.png", :title => "uTransfer Hungary"%></a>
			<!-- aloldalakon h3,h4 és a téma lesz h1 h2 -->
			<hgroup>
				<h1>Hassle-free university transfer</h1>
				<h2>With uTransfer your education in Hungary is painless. <em>Intrested?</em></h2>
			</hgroup>
		</div>
		<a href="#" id="offer">get a personalized <strong>offer</strong></a>
	</section>
	<nav id="main-nav">
		<ul>
			<li><a href="#">Home</a></li>
			<li><a class="active" href="">Experience</a></li>
			<li><a href="#">Process</a></li>
			<li><a href="#">Essentials</a></li>
			<li><a href="#">Hungary</a></li>
			<li><a href="/home/university">Universities</a></li>
			<li><a href="/home/testimonial">Testimonials</a></li>
			<li><a href="#">Contact</a></li>
		</ul>
	</nav>
</header>

